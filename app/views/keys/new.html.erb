<div class='container'>
  <div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h1 class="display-4">Create a new eKey</h1>
    
  </div>
  <div class="col-sm-8 mx-auto d-block">
      <%= form_with(url: lock_keys_path(params[:lock_id]), method: "POST") do %>
        <div class="form-group row">
          <label for="staticEmail" class="col-sm-2 col-form-label">Full Name</label>
          <div class="col-sm-8">
            <%= text_field_tag :name, nil, class: 'form-control', placeholder: 'JinKang Cheng' %>
          </div>
        </div>
        <div class="form-group row">
          <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-8">
            <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'chengjk@mice.ninja'  %>
          </div>
        </div>
        <div class="form-group row">
          <label for="staticEmail" class="col-sm-2 col-form-label">Start Date</label>
          <div class="col-sm-8">
            <%= text_field_tag :started_at, Time.now.beginning_of_month, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group row">
          <label for="staticEmail" class="col-sm-2 col-form-label">End Date</label>
          <div class="col-sm-8">
            <%= text_field_tag :expired_at, Time.now.end_of_month, class: 'form-control' %>
          </div>
        </div>

        <%= submit_tag "Send eKeys", class: 'btn btn-primary mx-auto d-block' %>

      <% end %>
    </div>
</div>